
<div class="container">
  <h1 class="page-title">Create a new article</h1>
   <%= form_for(@article, :html => {class: "form-horizontal", role: "form"}) do |form| %>
    <div class="form-group control-label">
      <%= form.label :title %>
    </div>
    <div class="form-group">
      <%= form.text_field :title, class: "form-control", placeholder: "Title of the article", autofocus: true %>
    </div>
    <div class="form-group control-label">
      <%= form.label :text %>
    </div>
    <div class="form-group">
      <%= form.text_area :text, rows: 10, class: "form-control", placeholder: "Text of the article" %>
    </div>
    <%= form.submit class: 'btn btn-primary btn-large' %>
   <% end %>
</div>
