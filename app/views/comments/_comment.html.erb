<div class="container ">
  <div class="row">
   <div class="col ">
    <div class="card shadow-lg p-3 mb-5 bg-white rounded">
      <div class="article-title card-header">
        <% if comment.user %>
          <%= link_to comment.user.username, user_path(comment.user), class: "user-link" %> 
        <% else %>
          <%= "Uknown" %>
        <% end %>
      </div>
      <div class="article-meta-details">
        <small>Created: <%= time_ago_in_words(comment.created_at) %> ago, 
        last updated: <%= time_ago_in_words(comment.updated_at) %> ago</small>
      </div>
      <div class="article-body card-body">
        <%= simple_format(comment.body) %>
      </div>
      <div class="article-actions">
        <% if comment.user == current_user%>  
          <%= link_to "Delete", article_comment_path(comment.article_id, comment.id), method: :delete, data: { confirm: "Are you sure you want to delete this comment?"}, class: "btn btn-xs btn-danger" %>
        <% end %>        
      </div>
    </div>
   </div>
  </div> 
</div>