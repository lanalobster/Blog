<%= render 'shared/errors', obj: @user %>

<div class="main-block">
  <div class="central-block">
    <%= form_for(@user, :html => {class: "form", role: "form"}) do |f| %>

      <div class="form-group">
        <div class="label">
          <%= f.label :username %>
        </div>
        <div class = "nick-line">
            <%= f.text_field :username, class: "form-control", placeholder: "Enter username", autofocus: true %>
            <button type="button" id="generate-button" class="btn btn-default generate-button">Generate</button>
        </div>
      </div>

      <div class="form-group">
        <div class="label">
          <%= f.label :email %>
        </div>
        <%= f.email_field :email, class: "form-control", placeholder: "Enter email" %>
      </div>

      <div class="form-group">
        <div class="label">
          <%= f.label :password %>
        </div>
        <%= f.password_field :password, class: "form-control", placeholder: "Enter password" %>
      </div>  

      <div class="form-group">
        <div class="label">
          <%= f.label :repeat_password %>
        </div>
        <%= f.password_field :repeat_password, class: "form-control", placeholder: "Enter password again" %>
      </div>  

      <%= f.submit(@user.new_record?  ? "Sign up" : "Update account", class: 'button') %>
    <% end %>
  </div>
</div>  
