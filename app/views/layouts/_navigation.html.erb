<nav class="navbar navbar-expand-lg navbar-dark bg-custom">
  <%= link_to "MyBlog", root_path, class: "navbar-brand", id: "logo" %>
  <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
    <span class="navbar-toggler-icon"></span>
  </button>
  <div class="collapse navbar-collapse" id="navbarSupportedContent">
    <ul class="navbar-nav mr-auto">
        <li><%= link_to "Users", users_path, class: "nav-link" %></li>
        <li><%= link_to "Articles", articles_path, class: "nav-link" %></li>
        <% if logged_in? %>
          <li><%= link_to "Create an Article", new_article_path, class: "nav-link" %></li>
        <% end %>
    </ul>
    <ul class="nav navbar-nav flex-row justify-content-md-center justify-content-start flex-nowrap">
        <% if logged_in? %>
          <% @user = User.find(session[:user_id]) %>
          <li><%= link_to (gravatar_for @user, size: 50), user_path(@user) %></li>
          <li><%= link_to "Log out", logout_path, method: :delete, class: "nav-link" %></li>
        <% else %>
          <li><%= link_to "Log in", login_path, class: "nav-link" %></li>
          <li><%= link_to "Sign up", new_user_path, class: "nav-link" %></li>
        <% end %>
    </ul>
  </div>
</nav>


